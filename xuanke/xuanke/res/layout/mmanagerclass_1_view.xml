<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xuanke.Mmanagerclass_1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里显示某项课程的教师选课情况，点击一项查看某一教师填写信息" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="330sp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1" >

    </ListView>

    <LinearLayout
                   android:id="@+id/id_tab_tianjiajiaoshi"
                   android:layout_width="150dp"
                   android:layout_height="68dp"
                   android:gravity="center"
                   android:orientation="vertical" >

                   <ImageButton
                       android:id="@+id/id_y_tab_tianjiajiaoshi_img"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="#ff000000"
                       android:src="@drawable/weixuankejiaoshi" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="添加教师"
                       android:textColor="#ff000000"
                       android:textSize="12sp" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/id_tab_shanchujiaoshi"
                   android:layout_width="150dp"
                   android:layout_height="68dp"
                   android:gravity="center"
                   android:orientation="vertical" >

                   <ImageButton
                       android:id="@+id/id_y_tab_shanchujiaoshi_img"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="#ff000000"
                       android:src="@drawable/weixuankejiaoshi" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="删除教师"
                       android:textColor="#ff000000"
                       android:textSize="12sp" />
               </LinearLayout>
</RelativeLayout>